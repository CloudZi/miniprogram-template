// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "dist": false,
        ".vscode": true,
        ".dtpl": true
    },
    "search.exclude": {
        "node_modules": true,
        "dist": true,
        ".vscode": true
    },
    "files.associations": {
        "*.wxss": "css",
        "*.wxs": "javascript",
        "*.wxts": "typescript",
        "*.html": "wxml",
        "*.wxml": "wxml",
        "*.json5": "jsonc",
        ".htmlhintrc": "json",
        ".stylelintrc": "json",
        ".prettierrc": "json"
    },
    "emmet.includeLanguages": {
        "wxml": "html",
        "wxss": "css"
    },
    "files.trimTrailingWhitespace": true,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "boundary",
    //关闭自带检查
    "css.validate": false,
    "html.suggest.html5": false,

    "dot-template-vscode.watchFilesGlobPattern": "src/**/*",
    "htmlhint.documentSelector": ["html", "wxml"],
    "prettier.ignorePath": ".prettierignore", // use .prettierignore
    "prettier.eslintIntegration": true,
    "prettier.stylelintIntegration": true,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "eslint.autoFixOnSave": true,
    "minapp-vscode.formatMaxLineCharacters": 120,
    "minapp-vscode.wxmlFormatter": "prettier",
    "minapp-vscode.styleExtensions": ["wxss", "css", "scss"],
    "minapp-vscode.documentSelector": ["wxml", "html"],
    "eslint.validate": [
        "javascript",
        {
            "language": "typescript",
            "autoFix": true
        }
    ],
    "json.schemas": [
        {
            "fileMatch": ["app.json", "app.jsonc", "app.json5", "app.cjson"],
            "url": "https://newfuture.github.io/miniprogram-json-schema/app.json"
        },
        {
            "fileMatch": [
                "project.config.json",
                "project.config.jsonc",
                "project.config.json5",
                "project.config.cjson"
            ],
            "url": "https://newfuture.github.io/miniprogram-json-schema/project.config.json"
        },
        {
            "fileMatch": [
                "src/pages/**/*.jsonc",
                "src/pages/**/*.json",
                "src/pages/**/*.json5",
                "src/pages/**/*.cjson",
                "src/page/**/*.jsonc",
                "src/page/**/*.json",
                "src/page/**/*.json5",
                "src/page/**/*.cjson"
            ],
            "url": "https://newfuture.github.io/miniprogram-json-schema/page.json"
        },
        {
            "fileMatch": [
                "src/components/**/*.jsonc",
                "src/components/**/*.json",
                "src/components/**/*.json5",
                "src/components/**/*.cjson",
                "src/component/**/*.jsonc",
                "src/component/**/*.json",
                "src/component/**/*.json5",
                "src/component/**/*.cjson"
            ],
            "url": "https://newfuture.github.io/miniprogram-json-schema/component.json"
        }
    ]
}
